{
    "train_batch_size": 2,
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 1,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 1e-4,
        "betas": [
          0.9,
          0.999
        ],
        "eps": 1e-8
      }
    },
    "lr_scheduler": {
        "type": "cosine"
    },
    "fp16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "none"
      },
      "contiguous_gradients": true
    }
}
  